<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gemini Chat Bot</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/script.js"></script>
  </head>
  <body class="bg-white dark:bg-zinc-800">
    <div class="container mx-auto max-w-4xl p-4">
      <div class="flex flex-col h-screen">
        <h1 class="text-2xl font-bold mb-4 text-zinc-800 dark:text-white">
          Gemini Chat Bot
        </h1>

        <!-- Chat Display -->
        <div
          id="chatDisplay"
          class="flex-1 overflow-y-auto mb-4 p-4 bg-zinc-100 dark:bg-zinc-900 rounded-lg"
        >
          <!-- Messages will be appended here -->
        </div>

        <!-- Input Form -->
        <form class="flex gap-2">
          <input
            type="text"
            id="chatInput"
            class="flex-1 p-2 border rounded-lg bg-white dark:bg-zinc-700 text-zinc-800 dark:text-white"
            placeholder="Type your message..."
          />
          <button
            type="submit"
            id="sendButton"
            class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600"
          >
            Send
          </button>
        </form>
      </div>
    </div>
    <script src="/public/script.js"></script>
  </body>
</html>
